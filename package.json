{
  "name": "socialmedia",
  "version": "1.0.0",
  "description": "A social media platform",
  "main": "server/src/app.js",
  "scripts": {
    "start": "node server/src/app.js",
    "server": "nodemon server/src/app.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "react-scripts test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "migrate": "knex migrate:latest",
    "migrate:make": "knex migrate:make"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^7.2.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.95.15",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.15",
    "sequelize": "^6.6.5",
    "socket.io": "^4.8.0",
    "sqlite3": "^5.0.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.25.7",
    "@babel/preset-react": "^7.25.7",
    "babel-jest": "^29.7.0",
    "concurrently": "^6.5.1",
    "eslint": "^7.32.0",
    "jest": "^27.2.0",
    "nodemon": "^2.0.12",
    "react-scripts": "^5.0.1",
    "supertest": "^6.1.6"
  },
  "jest": {
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "testEnvironment": "jsdom"
  }
}
